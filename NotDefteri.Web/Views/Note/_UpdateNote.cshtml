@model NotDefteri.Data.Models.NoteModel

@*<link href="~/Content/global_assets/js/plugins/summernote/summernote.css" rel="stylesheet" />
<script src="~/Content/global_assets/js/plugins/summernote/summernote.js"></script>*@

<input type="hidden" id="noteid" value="@Model.Id" />
<div class="form-group row">

    <label class="col-form-label col-sm-2">Başlık:</label>
    <div class="col-sm-5">
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @id = "edittitle" } })
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2">Kategori:</label>
    <div class="col-sm-5">
        @Html.DropDownListFor(model => model.CategoryId, new SelectList(ViewBag.categories,
"Value", "Text"), "Seçiniz", new { @class = "form-control", @id = "editcategory" })
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2">İçerik:</label>
    <div class="form-group row">
        <div class="col-sm-8">
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @id = "editcontent" })
        </div>
    </div>
</div>
