@model NotDefteri.Data.Models.PublicModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_AddNote")

@if (Session["FullName"] == null)
{
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Page header -->
            <div class="page-header page-header-light">

                <!-- Content area -->
                <div class="content">

                    <!-- Basic responsive configuration -->
                    <div class="card">
                        <div class="card-header header-elements-inline">
                            <h5 class="card-title">Notlarım</h5>
                            <div class="header-elements">
                                <div class="list-icons">
                                    <a class="list-icons-item" data-action="collapse"></a>
                                    <a class="list-icons-item" data-action="reload"></a>
                                    <a class="list-icons-item" data-action="remove"></a>
                                </div>
                            </div>
                        </div>
                        <table class="table datatable-responsive">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>Tarih</th>
                                    <th>Kategori</th>
                                    <th>Not İçerik</th>
                                    <th>Detay</th>
                                    <th class="text-center">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <!-- /basic responsive configuration -->

                </div>
                <!-- /main content -->

            </div>
        </div>
    </div>
}
else
{
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Page header -->
            <div class="page-header page-header-light">
                <div class="content">

                    <!-- Basic responsive configuration -->
                    <div class="card" id="tbl">
                        <div class="card-header header-elements-inline">
                            <h5 class="card-title">Notlarım</h5>
                            <div class="header-elements">
                                <div class="list-icons">
                                    <a class="list-icons-item" data-action="collapse"></a>
                                    <a class="list-icons-item" data-action="reload"></a>
                                    <a class="list-icons-item" data-action="remove"></a>
                                </div>
                            </div>
                        </div>
                        <div id="nottablo">
                            <table class="table datatable-responsive">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Tarih</th>
                                        <th>Kategori</th>
                                        <th>Not İçerik</th>
                                        <th>Düzenle</th>
                                        <th class="text-center">Sil</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var note in Model.NoteModels)
                                    {
                                        <tr id="row_@note.Id">
                                            <td>@note.Title</td>
                                            <td>@note.Date</td>
                                            <td>@note.CategoryModel.Name</td>
                                            <td>@Html.Raw(note.Content)</td>
                                            <td>
                                                <a href="#" class="view" data-target="/Note/NoteUpdate/@note.Id">Düzenle</a>
                                            </td>
                                            <td>
                                                <a href="#" id="DeletetoNote" data-model-id="@note.Id" style="color:red">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!-- Content area -->
            </div>
        </div>
    </div>
}

<script>
    $(function () {
        // a tagimizde bulunan .view classımıza click olduğunda
        $("body").on("click", ".view", function () {
            //data-target dan url mizi al
            var url = $(this).data("target");
            //bu urlimizi post et
            $.post(url, function (data) { })
                //eğer işlemimiz başarılı bir şekilde gerçekleşirse
                .done(function (data) {
                    //gelen datayı .modal-body mizin içerise html olarak ekle
                    $("#modalView .modal-body").html(data);
                    //sonra da modalimizi göster
                    $("#modalView").modal("show");
                })
                //eğer işlem başarısız olursa
                .fail(function (err) {
                    debugger
                    //modalımızın bodysine Error! yaz
                    $("#modalView .modal-body").text("Error!!");
                    //sonra da modalimizi göster
                    $("#modalView").modal("show");
                })

        });
    })

</script>

<div id="modalView" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Düzenleme İşlemleri</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form method="post" class="form-horizontal">
                <div class="modal-body">
                    @*<p>Modal body text goes here.</p>*@
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Çıkış</button>
                    <button id="UpdatetoNote" aria-pressed="true" class="btn bg-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<input type="hidden" id="hiddenNoteId" />

<div class="modal fade" id="mymodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Not Silme işlemi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4>Emin misin?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="DeleteNote">Sil</button>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/note.js"></script>