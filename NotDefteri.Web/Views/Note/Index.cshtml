@model NotDefteri.Data.Models.PublicModel
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_AddNote")

@if (Session["FullName"] == null)
{

    <div class="row" style="margin-top:100px;margin-bottom:500px">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Notlarım</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body table-responsive p-0">

                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>

                                <th>Başlık</th>
                                <th>Tarih</th>
                                <th>Kategori</th>
                                <th>Not İçerik</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

else
{
    <div class="row" style="margin-top:100px">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Notlarım</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body table-responsive p-0">

                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>

                                <th>Başlık</th>
                                <th>Tarih</th>
                                <th>Kategori</th>
                                <th>Not İçerik</th>
                            </tr>
                        </thead>
                        @foreach (var note in Model.NoteModels)
                        {
                            <tbody>

                                <tr>
                                    <td>@note.Title</td>
                                    <td>@note.Date</td>
                                    <td>@note.CategoryModel.Name</td>
                                    <td>@Html.Raw(note.Content)</td>
                                </tr>
                            </tbody>
                        }
                    </table>

                </div>
            </div>
        </div>
    </div>

    <div class="card-footer clearfix" style="width:0%;margin:auto">
        <div>
            @Html.PagedListPager(Model.NoteModels, pg => "Page?pg=" + pg)
        </div>
    </div>

}




