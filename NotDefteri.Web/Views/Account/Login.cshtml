@model NotDefteri.Data.Models.UserModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card card-info col-md-10" style="margin-top:100px;margin-left:10px;margin-bottom:300px">
    <div class="card-header">
        <h3 class="card-title">Kaydol</h3>
    </div>
    @if (Model == null)
    {
        <form class="form-horizontal" action="/Account/Login" method="post" role="form" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" name="UserName" placeholder="Kullanıcı Adı">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Şifre</label>
                    <div class="col-sm-5">
                        <input type="password" class="form-control" name="Password" placeholder="Şifre">
                    </div>
                </div>
            </div>
            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.error
                </div>

            }
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-info">Giriş Yap</button>
            </div>
            <!-- /.card-footer -->
        </form>
    }
    else
    {
        <form class="form-horizontal" action="/Account/Login" method="post" role="form" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" name="UserName" value="@Model.UserName" placeholder="Kullanıcı Adı">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Şifre</label>
                    <div class="col-sm-5">
                        <input type="password" class="form-control" name="Password" value="@Model.Password" placeholder="Şifre">
                    </div>
                </div>
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.error
                    </div>

                }
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-info">Giriş Yap</button>
            </div>
            <!-- /.card-footer -->
        </form>
    }
</div>